{
  "name": "orama-monorepo",
  "version": "1.0.0",
  "description": "Next generation full-text search engine, written in TypeScript",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "pnpm run format && pnpm lint-staged && cz",
    "format": "prettier -w packages --ignore-path ",
    "prepare": "husky install .husky",
    "test:orama": "cd packages/orama && npm test",
    "test": "npm run test:orama"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.22",
    "@types/node": "^18.11.15",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "c8": "^7.12.0",
    "commitizen": "^4.2.6",
    "eslint": "^8.29.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "execa": "^6.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "tap": "^16.3.2",
    "tap-mocha-reporter": "^5.0.3",
    "tape": "^5.6.1",
    "tcompare": "^6.0.0",
    "tsx": "^3.12.1",
    "typescript": "^4.9.4"
  },
  "author": {
    "name": "Michele Riva",
    "email": "michele.riva@oramasearch.com",
    "url": "https://github.com/MicheleRiva",
    "author": true
  },
  "contributors": [
    {
      "name": "Paolo Insogna",
      "email": "paolo.insogna@oramasearch.com",
      "url": "http://cowtech.it",
      "author": true
    }
  ],
  "license": "Apache-2.0",
  "lint-staged": {
    "*": [
      "prettier packages/**/*.{js,ts,mjs,cjs,cts,json} --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript"
      ]
    }
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}
